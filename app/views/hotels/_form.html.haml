= simple_form_for(@hotel, :html => {:multipart => true}) do |f|
  - if @hotel.errors.any?
    #error_explanation
      %h2
        = pluralize(@hotel.errors.count, "error")
        prohibited this hotel from being saved:
      %ul
        - @hotel.errors.full_messages.each do |msg|
          %li= msg
  = f.input :title, as: :text
  = f.input :room_description, as: :text
  = f.input :breakfast, as: :text
  = f.input :price, as: :integer
  = f.input :image, as: :file
  = f.simple_fields_for :location_attributes do |address|
    = address.input :country, as: :string
    = address.input :city
    = address.input :state
    = address.input :street
    = f.button :submit, class: 'btn btn-primary'
  %hr